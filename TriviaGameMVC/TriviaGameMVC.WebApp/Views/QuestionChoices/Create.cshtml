@model TriviaGameMVC.WebApp.Models.QuestionChoicesViewModel

@{
    ViewData["Title"] = "Create Choices";
}

<h1>Create Choices</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <input type="text" asp-for="QuestionId" class="form-control" readonly="readonly" />
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <p>Input choices below</p>
                @for (var i = 0; i < 4; i++)
                {
                    @Html.TextBoxFor(m => Model.Choices[i].ChoiceString)
                    @:&nbsp
                    @:&nbsp
                    @Html.CheckBoxFor(model => model.Choices[i].Correct)
                    <span>
                        Mark if correct
                    </span>
                    <br>
                }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


